<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card mt-5" style="border-radius: 15px; background-color: rgba(89, 25, 84, 0.8);">
        <div class="card-header text-center">
          <h3 class="card-title text-light">Log in</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label text-light" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label text-light" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label text-light" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Log in", class: "btn btn-primary btn-md" %>
            </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
